@model List<Question>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> ALL Questions </h2>
            </div>
        </div>
    </div>
   @* <div class="card-body p-4">
    </div> *@
        <table id="tblData" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Sr.No</th>
                    <th>Question Text</th>
                    <th>A</th>
                    <th>B</th>
                    <th>C</th>
                    <th>D</th>
                    <th>Answer</th>                                 
                    <th>Difficulty</th>
                </tr>
            </thead>
        </table>
    <div class="card-footer">
        <div class="row">
            <div class="col-12 text-left">
                @* <button id="btnDownload" class="btn btn-primary"><i class="bi bi-file-earmark-pdf"></i>Download PDF</button> *@
                <a asp-controller="Report" asp-action="pdf"  class="btn btn-primary"><i class="bi bi-file-earmark-pdf"></i>Download PDF</a>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/Question.js"></script>
}

