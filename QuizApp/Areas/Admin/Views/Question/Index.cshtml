@model List<Question>
@{
    
   int quizId = ViewBag.QuizId;
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @ViewBag.QuizTopic Questions </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Question" asp-action="Create" asp-route-id = "@quizId" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> Add New Question
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Sr. No</th>
                    <th>Question Text</th>
                    <th>A</th>
                    <th>B</th>
                    <th>C</th>
                    <th>D</th>
                    <th>Answer</th>
                    <th>Difficulty</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int srNo = 1;
                }
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@srNo</td>
                        <td>@obj.QuestionText</td>
                        <td>@obj.OptionA</td>
                        <td>@obj.OptionB</td>
                        <td>@obj.OptionC</td>
                        <td>@obj.OptionD</td>
                        <td>@obj.CorrectOption</td>
                        <td>@obj.Difficulty</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="Question" asp-action="Edit" asp-route-Id="@obj.QuestionId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Question" asp-action="Delete" asp-route-Id="@obj.QuestionId" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                    srNo++;
                }
                
                <div class="row">
                    <div class="col-12 text-end">
                        <a asp-controller="Quiz" asp-action="Index" class="btn btn-outline-secondary form-control w-auto">
                            Back To List
                        </a>
                    </div>
                </div>
            </tbody>
        </table>
    </div>
</div>
