@model Quiz

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Delete Topic</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="quiz_id" class="p-0"></label>
            <input asp-for="quiz_id" disabled class="form-control " />     @* //asp-for tag helper *@
       
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Topic" class="p-0"></label>
            <input asp-for="Topic" disabled class="form-control" />     @* //asp-for tag helper *@
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-outline-secondary form-control" onclick=" return showConfirmation()" onmouseover="this.style.backgroundColor='red';" onmouseout="this.style.backgroundColor='white';">Delete</button>
            </div>
            <div class="col-6 col-md-3 ">
                <a asp-controller="Quiz" asp-action="Index" class="btn btn-outline-secondary form-control ">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>
<script>
    function showConfirmation() {
        var result = confirm("Are you sure you want to Delete?");
        if (result) {
            
            return true;
        }
        else {
           
            return false;
        }
    }
</script>
