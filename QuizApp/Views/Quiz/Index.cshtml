@model List<Quiz>   

<div class="container">
    <div class ="row pt-4 pb-3" >
        <div class="col-6">
            <h2 class="text-primary">
                Quiz List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Quiz" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Add New Topic
            </a>

        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Sr.No
            </th>
            <th>
                Topic
            </th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
            @{      //razor syntax
                int srNo = 1;  // Initialize the serial number
            }
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                        @srNo
                </td>
                <td>
                    @obj.Topic
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Quiz" asp-action="Edit" asp-route-Id="@obj.quiz_id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>             
                                <a asp-controller="Quiz" asp-action="Delete" asp-route-Id =" @obj.quiz_id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            <a asp-controller="Question" asp-action=""  class="btn btn-primary mx-2">
                                <i class="bi bi-plus-lg"></i>  Add Question
                            </a>
                    </div>
                </td>
            </tr>
            srNo++;
        }
    </tbody>
</table>
</div>